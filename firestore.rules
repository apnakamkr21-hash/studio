/**
 * @fileoverview Firestore Security Rules for the campus event booking application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership and committee-ownership model, ensuring that only authenticated users can manage their own data and committees can manage their own events. Data denormalization is used to optimize authorization checks.
 *
 * Data Structure:
 * - /committees/{committeeId}: Stores committee profiles.
 * - /committees/{committeeId}/events/{eventId}: Stores events organized by a specific committee.
 * - /users/{userId}: Stores user profiles.
 * - /users/{userId}/bookings/{bookingId}: Stores event bookings made by a specific user.
 *
 * Key Security Decisions:
 * - Users can only create, update, or delete their own bookings.
 * - Committees can only create, update, or delete events associated with their committee.
 * - No public listing of user bookings is allowed.
 *
 * Denormalization for Authorization:
 * - The `Event` documents store the `committeeId`. This allows security rules to validate that the committee creating the event is indeed the committee specified without needing to perform a `get()` operation.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secures the `committees` collection, allowing read access to all but restricting write access.
     * @path /committees/{committeeId}
     * @allow get, list: if true;
     * @allow create: if request.auth != null;
     * @allow update: if false;
     * @allow delete: if false;
     * @deny create: if request.auth == null;
     * @principle Allows read for all; Requires authentication to create, but no modification/deletion.
     */
    match /committees/{committeeId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Secures the `events` subcollection under committees, ensuring committee-ownership.
     * @path /committees/{committeeId}/events/{eventId}
     * @allow get, list: if true;
     * @allow create: if isSignedIn() && request.resource.data.committeeId == committeeId;
     * @allow update: if isSignedIn() && resource.data.committeeId == committeeId;
     * @allow delete: if isSignedIn() && resource.data.committeeId == committeeId;
     * @deny create: if !isSignedIn() || request.resource.data.committeeId != committeeId;
     * @principle Enforces committee ownership; Allows read for all.
     */
    match /committees/{committeeId}/events/{eventId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.committeeId == committeeId;
      allow update: if isSignedIn() && resource.data.committeeId == committeeId;
      allow delete: if isSignedIn() && resource.data.committeeId == committeeId;
    }

    /**
     * @description Secures the `users` collection, enabling self-creation and profile management.
     * @path /users/{userId}
     * @allow get: if isOwner(userId);
     * @allow list: if false;
     * @allow create: if isOwner(userId);
     * @allow update: if isOwner(userId) && resource != null;
     * @allow delete: if false;
     * @deny create: if !isOwner(userId);
     * @principle Enforces user ownership; Disallows listing users.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) && resource != null;
      allow delete: if false;
    }

    /**
     * @description Secures the `bookings` subcollection under users, enforcing user-ownership for bookings.
     * @path /users/{userId}/bookings/{bookingId}
     * @allow get: if isOwner(userId);
     * @allow list: if isOwner(userId);
     * @allow create: if isOwner(userId) && request.resource.data.userId == userId;
     * @allow update: if isOwner(userId) && resource.data.userId == userId && resource != null;
     * @allow delete: if isOwner(userId) && resource.data.userId == userId && resource != null;
     * @deny create: if !isOwner(userId) || request.resource.data.userId != userId;
     * @principle Enforces user ownership; Prevents modification of userId.
     */
    match /users/{userId}/bookings/{bookingId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isOwner(userId) && resource.data.userId == userId && resource != null;
      allow delete: if isOwner(userId) && resource.data.userId == userId && resource != null;
    }

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
  }
}